{
    "name": "outeredge/magento-opentelemetry-module",
    "description": "Magento Open Telemetry Module by outer/edge",
    "type": "magento2-module",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "outer/edge",
            "email": "support@outeredge.agency",
            "homepage": "https://outeredge.agency/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "monolog/monolog": "^2",
        "open-telemetry/opentelemetry-logger-monolog": "^1.1",
        "open-telemetry/exporter-otlp": "^1.3"
    },
    "require-dev": {
        "outeredge/dev-dependencies": "^3.0"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "OuterEdge\\OpenTelemetry\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
